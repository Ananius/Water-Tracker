{
  "manifest_version": 3,
  "name": "Water Tracker",
  "version": "1.0",
  "description": "记录每天喝水次数并展示统计数据。",
  "permissions": ["notifications", "storage"],
  "host_permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
